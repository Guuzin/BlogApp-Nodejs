<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}

<div class="card mt-4">
    <div class="card-body">
        <h4>{{titulo}}</h4><br>
        <small>Descrição: {{descricao}}</small><hr>
        <p>{{conteudo}}</p><br>
        {{!-- <small>Slug: {{slug}}</small> <br> --}}
        <small>categoria: {{categoria.nome}}</small><br>
        <small>Data de criação: {{data}}</small> <br>
        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-4 btn-sm">Editar postagem</button></a>
        <form action="/admin/postagens/deletar" method="post">
            <input type="hidden" name="id" value="{{_id}}">
            <button class="btn btn-danger btn-sm mt-2">Deletar postagem</button>
        </form>

    </div>
</div>

{{else}}

    <h4 class="mt=3">Nenhuma postagem registrada!</h4>

{{/each}}